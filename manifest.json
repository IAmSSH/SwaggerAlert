{
  "manifest_version": 2,
  "name": "Swagger Notifier",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "48": "/icon.png"
    },
    "default_title": "Swagger Notifier",
    "default_popup": "/popup.html"
  },

  "permissions": ["storage"]
}